{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "opencode",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": true,
  "plugin": [
    "opencode-skills"
  ],
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "git status" : "allow",
      "git diff" : "allow",
      "git diff *" : "allow",
      "git log *" : "allow",
      "git show *" : "allow",
      "git branch *" : "allow",
      "git add *" : "allow",
      "git checkout *": "allow",
      "git stash *": "allow",
      "git fetch *": "allow",
      "npm run test" : "allow",
      "npm run test:*" : "allow",
      "npm run lint" : "allow",
      "npm run build" : "allow",
      "npm run dev" : "allow",
      "mvn *" : "allow",
      "./gradlew build" : "allow",
      "./gradlew test" : "allow",
      "ls *" : "allow",
      "fd *" : "allow",
      "rg *" : "allow",
      "ast-grep *" : "allow",
      "fzf *" : "allow",
      "jq *" : "allow",
      "yq *" : "allow",
      "cat *" : "allow",
      "grep *" : "allow",
      "find *" : "allow",
      "tree *" : "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "sort *": "allow",
      "uniq *": "allow",
      "diff *": "allow",
      "which *": "allow",
      "echo *": "allow",
      "pwd": "allow",
      "ps aux" : "allow",
      "netstat *" : "allow",
      "curl localhost:*" : "allow",
      "mkdir *" : "allow",
      "touch *" : "allow",
      "npx playwright test" : "allow",
      "npx playwright test *" : "allow",
      
      "git push": "ask",
      "git push *": "ask",
      "git commit": "ask",
      "git commit *": "ask",
      "git pull": "ask",
      "git pull *": "ask",
      "git merge *": "ask",
      "git rebase *": "ask",

      "rm -rf *": "deny",
      "rm -fr *": "deny",
      "sudo *": "deny",
      "shutdown *": "deny",
      "reboot *": "deny",
      "dd *": "deny",
      "mkfs *": "deny",
      "chmod 777 *": "deny",
      "chown *": "deny",
      "kill -9 *": "deny",
      "pkill *": "deny",
      ": > *": "deny",
    }
  }
}
